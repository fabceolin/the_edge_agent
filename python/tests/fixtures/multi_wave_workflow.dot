// Multi-wave workflow test fixture for TEA-CLI-009
// 3 waves: Wave 1 (3 nodes), Wave 2 (2 nodes), Wave 3 (1 node)
// Total: 6 nodes

digraph multi_wave_workflow {
    rankdir=TB;

    // Wave 1: 3 parallel nodes (no dependencies)
    setup [label="Setup" shape=box command="echo 'Running setup'"];
    config [label="Config" shape=box command="echo 'Running config'"];
    init [label="Init" shape=box command="echo 'Running init'"];

    // Wave 2: 2 nodes that depend on wave 1
    build [label="Build" shape=box command="echo 'Running build'"];
    test [label="Test" shape=box command="echo 'Running test'"];

    // Wave 3: 1 node that depends on wave 2
    deploy [label="Deploy" shape=box command="echo 'Running deploy'"];

    // Dependencies
    setup -> build;
    config -> build;
    config -> test;
    init -> test;
    build -> deploy;
    test -> deploy;
}
