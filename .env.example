# The Edge Agent Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Azure OpenAI (primary)
export AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
export AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
export AZURE_OPENAI_DEPLOYMENT="gpt-4"

# OpenAI (alternative)
export OPENAI_API_KEY="sk-your-openai-api-key"

# Perplexity (for web search)
export PERPLEXITY_API_KEY="pplx-your-perplexity-key"

# =============================================================================
# Neo4j Configuration (TEA-BUILTIN-001.7.x)
# =============================================================================

# Neo4j Connection - Used for graph backend tests
export NEO4J_URI="bolt://localhost:7687"
export NEO4J_USERNAME="neo4j"
export NEO4J_PASSWORD="tea-test-password"
export NEO4J_DATABASE="neo4j"

# Docker Compose ports (optional - defaults shown)
export NEO4J_HTTP_PORT="7474"
export NEO4J_BOLT_PORT="7687"

# =============================================================================
# Test Configuration
# =============================================================================

# Set to skip integration tests requiring live Neo4j
export NEO4J_TEST_SKIP="false"

# Test timeout for Neo4j operations (seconds)
export NEO4J_TEST_TIMEOUT="30"
